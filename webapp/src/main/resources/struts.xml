<struts>

  <constant name="struts.objectFactory"
            value="org.apache.struts2.spring.StrutsSpringObjectFactory"/>
  <constant name="struts.objectFactory.spring.autoWire" value="name"/>
  <constant name="struts.devMode" value="false"/>
  <constant name="struts.freemarker.manager.classname" value="ambraFreemarkerManager"/>
  <constant name="struts.i18n.encoding" value="UTF-8"/>
  <constant name="struts.ui.theme" value="ambra-theme"/>
  <constant name="struts.ui.templateDir" value="template"/>
  <constant name="struts.ui.templateSuffix" value="ftl"/>
  <!--
  allow the mapping of friendly URIs,
  e.g. "/article/feed" v. requiring "/article/articleFeed.action?parms"
  -->

  <include file="struts-default.xml"/>

  <package name="default" extends="struts-default">
    <result-types>
      <result-type name="freemarker"
                   class="org.apache.struts2.views.freemarker.FreemarkerResult" default="true">
      </result-type>
      <result-type name="default_freemarker" class="org.ambraproject.struts2.AmbraFreemarkerResult">
        <param name="location">/template/main.ftl</param>
      </result-type>
      <result-type name="static_freemarker" class="org.ambraproject.struts2.AmbraFreemarkerResult">
        <param name="location">/template/static.ftl</param>
      </result-type>
      <result-type name="generic_freemarker" class="org.ambraproject.struts2.AmbraFreemarkerResult">
        <param name="location">/template/generic.ftl</param>
      </result-type>
      <result-type name="naked" class="org.ambraproject.struts2.AmbraFreemarkerResult">
        <param name="location">/template/naked_template.ftl</param>
      </result-type>
      <result-type name="ambraStream" class="org.ambraproject.struts2.AmbraStreamResult"/>
      <result-type name="json" class="org.ambraproject.struts2.JsonResult">
        <param name="excludeProperties">advisors, callbacks, permissions</param>
        <param name="ignoreHierarchy">false</param>
        <param name="noCache">true</param>
        <param name="wrapWithComments">true</param>
      </result-type>
      <result-type name="feed" class="org.ambraproject.struts2.AmbraFeedResult"/>
      <result-type name="citation" class="org.ambraproject.struts2.CitationResult"/>
    </result-types>

    <interceptors>
      <interceptor name="ensureUserAccount" class="org.ambraproject.struts2.EnsureUserAccountInterceptor"/>
      <interceptor name="ensureAdmin" class="org.ambraproject.struts2.EnsureRoleInterceptor"/>
      <interceptor name="json" class="org.apache.struts2.json.JSONInterceptor"/>
      <interceptor name="internalIp" class="org.ambraproject.struts2.InternalIpInterceptor"/>

      <interceptor-stack name="strutsBaseStack">
        <interceptor-ref name="exception">
          <param name="logEnabled">true</param>
          <param name="logCategory">org.ambraproject.UnhandledException</param>
          <param name="logLevel">ERROR</param>
        </interceptor-ref>
        <interceptor-ref name="timer"/>
        <interceptor-ref name="logger"/>
        <interceptor-ref name="alias"/>
        <interceptor-ref name="servletConfig"/>
        <interceptor-ref name="prepare"/>
        <interceptor-ref name="i18n"/>
        <interceptor-ref name="debugging"/>
        <interceptor-ref name="modelDriven"/>
        <interceptor-ref name="fileUpload"/>
        <interceptor-ref name="staticParams"/>
        <interceptor-ref name="params">
          <param name="excludeParams">ticket</param>
        </interceptor-ref>
        <interceptor-ref name="conversionError"/>
        <interceptor-ref name="validation">
          <param name="excludeMethods">input,back,cancel,browse</param>
        </interceptor-ref>
        <interceptor-ref name="workflow">
          <param name="excludeMethods">input,back,cancel,browse</param>
        </interceptor-ref>
      </interceptor-stack>

      <interceptor-stack name="ambraBaseStack">
        <interceptor-ref name="strutsBaseStack"/>
        <interceptor-ref name="internalIp"/>
      </interceptor-stack>

      <interceptor-stack name="ambraUserStack">
        <interceptor-ref name="ambraBaseStack"/>
        <interceptor-ref name="ensureUserAccount"/>
      </interceptor-stack>

      <interceptor-stack name="ambraAdminStack">
        <interceptor-ref name="ambraUserStack"/>
        <interceptor-ref name="ensureAdmin"/>
      </interceptor-stack>

      <interceptor-stack name="minimalStack">
        <interceptor-ref name="logger"/>
        <interceptor-ref name="timer"/>
        <interceptor-ref name="servletConfig"/>
      </interceptor-stack>
    </interceptors>

    <default-interceptor-ref name="ambraUserStack"/>
    <default-action-ref name="pageNotFound" />

    <global-results>
      <result name="new-profile" type="redirectAction">
        <param name="actionName">prePopulateNewUser</param>
        <param name="namespace">/user</param>
      </result>
      <result name="update-profile" type="redirectAction">
        <param name="actionName">prePopulateNewUser</param>
        <param name="namespace">/user</param>
      </result>
      <result name="role-insufficient" type="default_freemarker">
        <param name="templateFile">/user/inSufficientRole.ftl</param>
      </result>
      <result name="error" type="default_freemarker">
        <param name="status">500</param>
        <param name="templateFile">/error.ftl</param>
      </result>
    </global-results>

    <global-exception-mappings>
      <exception-mapping exception="java.lang.Exception" result="error"/>
    </global-exception-mappings>

    <action name="logout" class="org.ambraproject.action.LogoutAction">
      <result name="success" type="redirect">/home.action</result>
    </action>

    <action name="trackback" class="org.ambraproject.action.trackback.CreateTrackbackAction">
      <result name="success">
        <param name="location">/trackback/success.ftl</param>
        <param name="contentType">application/xml</param>
      </result>
      <result name="error">
        <param name="location">/trackback/error.ftl</param>
        <param name="contentType">application/xml</param>
      </result>
    </action>

    <action name="pingback" class="org.ambraproject.action.trackback.CreatePingbackAction">
      <!-- Success is handled by XmlRpcServletServer, not Struts -->
      <result name="error">
        <param name="location">/trackback/pingback.ftl</param>
        <param name="status">400</param>
      </result>
    </action>

    <action name="pageNotFound" class="org.ambraproject.action.PageNotFoundAction">
      <interceptor-ref name="minimalStack"/>
      <result name="success" type="default_freemarker">
        <param name="status">404</param>
        <param name="templateFile">/pageNotFound.ftl</param>
      </result>
    </action>

    <action name="home" class="org.ambraproject.action.HomePageAction">
      <result name="success" type="default_freemarker">
        <param name="templateFile">/index.ftl</param>
      </result>
    </action>

    <action name="recentArticles" class="org.ambraproject.action.HomePageAction">
      <result name="success" type="naked">
        <param name="templateFile">/article/recentArticles.ftl</param>
      </result>
    </action>

    <action name="mostCommented" class="org.ambraproject.action.HomePageAction">
      <result name="success" type="naked">
        <param name="templateFile">/article/mostCommented.ftl</param>
      </result>
    </action>

    <action name="mostViewed" class="org.ambraproject.action.MostViewedAction">
      <result name="success" type="naked">
        <param name="templateFile">/article/mostViewed.ftl</param>
      </result>
    </action>

    <action name="selectList" class="org.ambraproject.action.ListingAction"/>

    <action name="taxonomy" class="org.ambraproject.action.TaxonomyAction">
      <result name="success" type="default_freemarker">
        <param name="templateFile">/taxonomy.ftl</param>
      </result>

      <!-- The action returns ERROR if it comes from a non-PLOS ONE journal;
           in that case just return a 404.                              -->
      <result name="error" type="default_freemarker">
        <param name="status">404</param>
        <param name="templateFile">/pageNotFound.ftl</param>
      </result>
    </action>
  </package>

  <package name="debug" extends="default" namespace="/debug">
    <default-action-ref name="debug"/>

    <action name="debug" class="org.ambraproject.action.debug.DebugInfoAction">
      <result name="success" type="naked">
        <param name="templateFile">/debugInfo.ftl</param>
      </result>

      <!-- Since this is an internal-only action, return a 404 instead of 500 on ERROR
           to prevent the super-top-secret URL from leaking out.                  -->
      <result name="error" type="default_freemarker">
        <param name="status">404</param>
        <param name="templateFile">/pageNotFound.ftl</param>
      </result>
    </action>

    <action name="threadDump" class="org.ambraproject.action.debug.ThreadDumpAction" />

    <action name="processDump" class="org.ambraproject.action.debug.ProcessDumpAction" />
  </package>

  <package name="feedback" extends="default" namespace="/feedback">
    <action name="feedback" class="org.ambraproject.action.FeedbackAction" method="executeRender">
      <result type="default_freemarker">
        <param name="templateFile">/feedback/feedbackEntry.ftl</param>
      </result>
    </action>

    <action name="feedbackCreate" class="org.ambraproject.action.FeedbackAction" method="executeSend">
      <result name="error" type="default_freemarker">
        <param name="templateFile">/feedback/feedbackEntry.ftl</param>
      </result>
      <result name="input" type="default_freemarker">
        <param name="templateFile">/feedback/feedbackEntry.ftl</param>
      </result>
      <result name="success" type="default_freemarker">
        <param name="templateFile">/feedback/feedbackSuccess.ftl</param>
      </result>
    </action>
  </package>

  <package name="search" extends="default" namespace="/search">

    <default-action-ref name="pageNotFound"/>

    <action name="searchStart" class="org.ambraproject.action.NoOpAction">
      <result name="input" type="default_freemarker">
        <param name="templateFile">/search/searchResults.ftl</param>
      </result>
    </action>

    <action name="simpleSearch" class="org.ambraproject.action.search.SearchAction" method="executeSimpleSearch">
      <result name="input" type="default_freemarker">
        <param name="templateFile">/search/searchResults.ftl</param>
      </result>
      <result name="success" type="default_freemarker">
        <param name="templateFile">/search/searchResults.ftl</param>
      </result>
      <result name="error" type="default_freemarker">
        <param name="status">500</param>
        <param name="templateFile">/searchError.ftl</param>
      </result>
    </action>

    <action name="advancedSearch" class="org.ambraproject.action.search.SearchAction" method="executeUnformattedSearch">
      <result name="input" type="default_freemarker">
        <param name="templateFile">/search/searchAdvanced.ftl</param>
      </result>
      <result name="success" type="default_freemarker">
        <param name="templateFile">/search/searchResults.ftl</param>
      </result>
      <result name="error" type="default_freemarker">
        <param name="status">500</param>
        <param name="templateFile">/searchError.ftl</param>
      </result>
    </action>

    <!--Probably not the best action name here, suggestions? -->
    <action name="quickSearch" class="org.ambraproject.action.search.SearchAction" method="executeQuickSearch">
      <result name="input" type="default_freemarker">
        <param name="templateFile">/search/searchAdvanced.ftl</param>
      </result>
      <result name="success" type="default_freemarker">
        <param name="templateFile">/search/searchResults.ftl</param>
      </result>
      <result name="redirectToArticle" type="redirect">
        ${journalURL}/article/${articleURI}
      </result>
      <result name="error" type="default_freemarker">
        <param name="status">500</param>
        <param name="templateFile">/searchError.ftl</param>
      </result>
    </action>

    <action name="listFacet" class="org.ambraproject.action.search.ListFacetAction" method="listFacet">
      <result name="success" type="default_freemarker">
        <param name="templateFile">/search/searchFacet.ftl</param>
      </result>
      <result name="error" type="default_freemarker">
        <param name="status">500</param>
        <param name="templateFile">/searchError.ftl</param>
      </result>
    </action>

    <action name="saveSearch" class="org.ambraproject.action.search.SaveSearchAction" method="saveSearch">
      <result name="input" type="json"/>
      <result name="success" type="json"/>
      <result name="error" type="json"/>
    </action>
  </package>

  <package name="static" extends="default" namespace="/static">
    <action name="*" class="org.ambraproject.action.NoOpAction">
      <interceptor-ref name="minimalStack"/>
      <result name="success" type="static_freemarker">
        <param name="templateFile">/static/{1}.ftl</param>
      </result>
    </action>
  </package>

  <package name="browse" extends="default" namespace="/article/browse">
    <action name="browse" class="org.ambraproject.action.article.BrowseArticlesAction">
      <result name="success" type="default_freemarker">
        <param name="templateFile">/article/browse.ftl</param>
      </result>
      <result name="error" type="default_freemarker">
        <param name="status">500</param>
        <param name="templateFile">/static/browseError.ftl</param>
      </result>
    </action>

    <action name="issue" class="org.ambraproject.action.article.BrowseIssueAction">
      <result name="success" type="default_freemarker">
        <param name="templateFile">/article/browseIssue.ftl</param>
      </result>
      <result name="none" type="default_freemarker">
        <param name="status">404</param>
        <param name="templateFile">/pageNotFound.ftl</param>
      </result>
      <!-- TODO: Make a real error page -->
      <result name="error" type="default_freemarker">
        <param name="status">404</param>
        <param name="templateFile">/pageNotFound.ftl</param>
      </result>
    </action>

    <action name="volume" class="org.ambraproject.action.article.BrowseVolumeAction">
      <result name="success" type="default_freemarker">
        <param name="templateFile">/article/browseVolume.ftl</param>
      </result>
      <result name="error" type="default_freemarker">
        <param name="status">404</param>
        <param name="templateFile">/pageNotFound.ftl</param>
      </result>
    </action>
  </package>

  <package name="article" extends="default" namespace="/article">

    <default-action-ref name="pageNotFound"/>

    <action name="emailArticle" class="org.ambraproject.action.article.EmailArticleAction" method="executeRender">
      <result name="success" type="default_freemarker">
        <param name="templateFile">/article/emailArticle.ftl</param>
      </result>
      <result name="input" type="default_freemarker">
        <param name="status">404</param>
        <param name="templateFile">/article/article_not_found.ftl</param>
      </result>
    </action>

    <action name="findArticle" class="org.ambraproject.action.article.FindArticleAction">
      <result name="success" type="default_freemarker">
        <param name="templateFile">/article/findArticle.ftl</param>
      </result>
    </action>

    <action name="emailThisArticleSubmit" class="org.ambraproject.action.article.EmailArticleAction" method="executeSend">
      <result name="success" type="default_freemarker">
        <param name="templateFile">/article/emailSuccess.ftl</param>
      </result>
      <result name="input" type="default_freemarker">
        <param name="templateFile">/article/emailArticle.ftl</param>
      </result>
    </action>

    <action name="fetchArticle" class="org.ambraproject.action.article.FetchArticleTabsAction" method="fetchArticle">
      <result name="success" type="default_freemarker">
        <param name="templateFile">/article/article.ftl</param>
      </result>
      <result name="articleNotFound" type="default_freemarker">
        <param name="status">404</param>
        <param name="templateFile">/article/article_not_found.ftl</param>
      </result>
    </action>

    <action name="fetchArticleAuthors" class="org.ambraproject.action.article.FetchArticleTabsAction"
            method="fetchArticleAuthors">
      <result name="success" type="default_freemarker">
        <param name="templateFile">/article/article_authors.ftl</param>
      </result>
      <result name="error" type="default_freemarker">
        <param name="status">404</param>
        <param name="templateFile">/article/article_not_found.ftl</param>
      </result>
    </action>

    <action name="fetchArticleComments" class="org.ambraproject.action.article.FetchArticleTabsAction"
            method="fetchArticleComments">
      <result name="success" type="default_freemarker">
        <param name="templateFile">/article/article_comments.ftl</param>
      </result>
      <result name="error" type="default_freemarker">
        <param name="status">404</param>
        <param name="templateFile">/article/article_not_found.ftl</param>
      </result>
    </action>

    <action name="fetchArticleMetrics" class="org.ambraproject.action.article.FetchArticleTabsAction"
            method="fetchArticleMetrics">
      <result name="success" type="default_freemarker">
        <param name="templateFile">/article/article_metrics.ftl</param>
      </result>
      <result name="error" type="default_freemarker">
        <param name="status">404</param>
        <param name="templateFile">/article/article_not_found.ftl</param>
      </result>
    </action>

    <action name="fetchArticleRelated" class="org.ambraproject.action.article.FetchArticleTabsAction"
            method="fetchArticleRelated">
      <result name="success" type="default_freemarker">
        <param name="templateFile">/article/article_related.ftl</param>
      </result>
      <result name="error" type="default_freemarker">
        <param name="status">404</param>
        <param name="templateFile">/article/article_not_found.ftl</param>
      </result>
    </action>

    <action name="fetchArticleContent" class="org.ambraproject.action.article.FetchArticleTabsAction" method="fetchArticleContent">
      <result name="success" type="naked">
        <param name="templateFile">/article/article_content.ftl</param>
      </result>
      <result name="articleNotFound" type="default_freemarker">
        <param name="status">404</param>
        <param name="templateFile">/article/article_not_found.ftl</param>
      </result>
    </action>

    <action name="fetchArticleAuthorsContent" class="org.ambraproject.action.article.FetchArticleTabsAction" method="fetchArticleAuthorsContent">
      <result name="success" type="naked">
        <param name="templateFile">/article/article_authors_content.ftl</param>
      </result>
      <result name="error" type="default_freemarker">
        <param name="status">404</param>
        <param name="templateFile">/article/article_not_found.ftl</param>
      </result>
    </action>

    <action name="fetchArticleCommentsContent" class="org.ambraproject.action.article.FetchArticleTabsAction" method="fetchArticleCommentsContent">
      <result name="success" type="naked">
        <param name="templateFile">/article/article_comments_content.ftl</param>
      </result>
      <result name="error" type="default_freemarker">
        <param name="status">404</param>
        <param name="templateFile">/article/article_not_found.ftl</param>
      </result>
    </action>

    <action name="fetchArticleMetricsContent" class="org.ambraproject.action.article.FetchArticleTabsAction" method="fetchArticleMetricsContent">
      <result name="success" type="naked">
        <param name="templateFile">/article/article_metrics_content.ftl</param>
      </result>
      <result name="error" type="default_freemarker">
        <param name="status">404</param>
        <param name="templateFile">/article/article_not_found.ftl</param>
      </result>
    </action>

    <action name="fetchArticleRelatedContent" class="org.ambraproject.action.article.FetchArticleTabsAction" method="fetchArticleRelatedContent">
      <result name="success" type="naked">
        <param name="templateFile">/article/article_related_content.ftl</param>
      </result>
      <result name="error" type="default_freemarker">
        <param name="status">404</param>
        <param name="templateFile">/article/article_not_found.ftl</param>
      </result>
    </action>

    <action name="fetchArticleCrossRef" class="org.ambraproject.action.article.FetchArticleAction" method="fetchArticleInfo">
      <result name="success" type="default_freemarker">
        <param name="templateFile">/article/article_crossref.ftl</param>
      </result>
      <result name="error" type="default_freemarker">
        <param name="status">404</param>
        <param name="templateFile">/article/article_not_found.ftl</param>
      </result>
    </action>

    <action name="lightbox" class="org.ambraproject.action.article.SlideshowAction">
      <result name="success" type="json">
        <param name="excludeProperties">advisors, callbacks, annotations</param>
      </result>
      <result name="error" type="json">
        <param name="excludeProperties">advisors, callbacks, annotations</param>
      </result>
      <result name="input" type="json">
        <param name="excludeProperties">advisors, callbacks, annotations</param>
      </result>
    </action>

    <action name="fetchArticleTwitter" class="org.ambraproject.action.article.FetchArticleAction" method="fetchArticleInfo">
      <result name="success" type="default_freemarker">
        <param name="templateFile">/article/article_twitter.ftl</param>
      </result>
      <result name="error" type="default_freemarker">
        <param name="status">404</param>
        <param name="templateFile">/article/article_not_found.ftl</param>
      </result>
    </action>

    <action name="slideshow" class="org.ambraproject.action.article.SlideshowAction">
      <result name="success" type="default_freemarker">
        <param name="templateFile">/article/imageWindow.ftl</param>
      </result>
      <result name="error" type="default_freemarker">
        <param name="status">404</param>
        <param name="templateFile">/article/article_not_found.ftl</param>
      </result>
      <result name="input" type="default_freemarker">
        <param name="status">404</param>
        <param name="templateFile">/article/article_not_found.ftl</param>
      </result>
    </action>

    <action name="showImageLarge" class="org.ambraproject.action.NoOpAction">
      <result name="success" type="default_freemarker">
        <param name="templateFile">/article/imageWindowLarge.ftl</param>
      </result>
      <result name="error" type="default_freemarker">
        <param name="status">404</param>
        <param name="templateFile">/article/article_not_found.ftl</param>
      </result>
    </action>

    <action name="fetchObjectAttachment" class="org.ambraproject.action.article.FetchObjectAction" method="fetchObjectAction">
      <result name="success" type="ambraStream">
        <param name="isAttachment">true</param>
      </result>
      <result name="input" type="default_freemarker">
        <param name="status">404</param>
        <param name="templateFile">/article/article_not_found.ftl</param>
      </result>
    </action>

    <action name="fetchFullDOIXML" class="org.ambraproject.action.article.FetchObjectAction" method="fetchObjectAction">
      <param name="fullDOI">true</param>
      <param name="representation">XML</param>
      <result name="success" type="ambraStream">
        <param name="isAttachment">true</param>
      </result>
      <result name="input" type="default_freemarker">
        <param name="status">404</param>
        <param name="templateFile">/article/article_not_found.ftl</param>
      </result>
    </action>

    <action name="fetchObject" class="org.ambraproject.action.article.FetchObjectAction" method="fetchObjectAction">
      <result name="success" type="ambraStream">
        <param name="isAttachment">false</param>
      </result>
      <result name="input" type="default_freemarker">
        <param name="status">404</param>
        <param name="templateFile">/article/article_not_found.ftl</param>
      </result>
    </action>

    <action name="fetchPowerPoint" class="org.ambraproject.action.article.FetchPowerPointAction">
      <result name="success" type="ambraStream">
        <param name="isAttachment">false</param>
      </result>
      <result name="input" type="default_freemarker">
        <param name="status">404</param>
        <param name="templateFile">/article/article_not_found.ftl</param>
      </result>
    </action>

    <action name="fetchSingleRepresentation" class="org.ambraproject.action.article.FetchObjectAction" method="fetchSingleRepresentation">
      <result name="success" type="ambraStream">
        <param name="isAttachment">true</param>
