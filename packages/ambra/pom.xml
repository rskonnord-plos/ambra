<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

  <modelVersion>4.0.0</modelVersion>
  <groupId>org.ambraproject.packages</groupId>
  <artifactId>ambra</artifactId>
  <version>1.0-SNAPSHOT</version>
  <packaging>pom</packaging>
  <name>ambra</name>

  <parent>
    <groupId>org.ambraproject.packages</groupId>
    <artifactId>packages</artifactId>
    <version>1.0-SNAPSHOT</version>
  </parent>

  <dependencies>
    <dependency>
      <groupId>org.ambraproject</groupId>
      <artifactId>ambra-doi-resolver</artifactId>
      <version>${project.version}</version>
      <type>war</type>
    </dependency>
    <dependency>
      <groupId>org.ambraproject</groupId>
      <artifactId>ambra-webapp</artifactId>
      <version>${project.version}</version>
      <type>war</type>
    </dependency>
    <dependency>
      <groupId>org.ambraproject</groupId>
      <artifactId>journals</artifactId>
      <version>${project.version}</version>
      <type>tar.gz</type>
      <classifier>journals</classifier>
    </dependency>
    <dependency>
      <groupId>${project.groupId}</groupId>
      <artifactId>packages</artifactId>
      <version>${project.version}</version>
      <type>tar.gz</type>
      <classifier>tomcat-common</classifier>
    </dependency>
    <dependency>
      <groupId>${project.groupId}</groupId>
      <artifactId>ambra-common</artifactId>
      <version>${project.version}</version>
      <type>tar.gz</type>
      <classifier>ambra_scripts</classifier>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <plugin>
        <artifactId>maven-assembly-plugin</artifactId>
        <configuration>
          <descriptors>
            <descriptor>src/main/assembly/assembly.xml</descriptor>
          </descriptors>
        </configuration>
      </plugin>
    </plugins>
  </build>

  <profiles>
    <profile>
      <id>rpm</id>
      <build>
        <plugins>

          <plugin>
            <groupId>org.codehaus.mojo</groupId>
            <artifactId>build-helper-maven-plugin</artifactId>
            <executions><execution><id>attach-rpm</id></execution></executions>
          </plugin>

          <plugin>
            <groupId>org.codehaus.mojo</groupId>
            <artifactId>rpm-maven-plugin</artifactId>

            <executions>
              <execution>
                <phase>package</phase>
                <goals>
                  <goal>rpm</goal>
                </goals>
              </execution>
            </executions>

            <configuration>
              <mappings>
                <mapping>
                  <directory>/usr/local/topaz</directory>
                  <filemode>755</filemode>
                  <username>topaz</username>
                  <groupname>topaz</groupname>
                </mapping>
                <mapping>
                  <directory>/var/spool/ambra</directory>
                  <filemode>755</filemode>
                  <username>topaz</username>
                  <groupname>topaz</groupname>
                </mapping>
                <mapping>
                  <directory>/var/spool/ambra/ingestion-queue</directory>
                  <filemode>755</filemode>
                  <username>topaz</username>
                  <groupname>topaz</groupname>
                </mapping>
                <mapping>
                  <directory>/var/spool/ambra/ingested</directory>
                  <filemode>755</filemode>
                  <username>topaz</username>
                  <groupname>topaz</groupname>
                </mapping>
                <mapping>
                  <directory>/var/cache/ambra</directory>
                  <filemode>755</filemode>
                  <username>topaz</username>
                  <groupname>topaz</groupname>
                </mapping>
                <mapping>
                  <directory>/usr/local/topaz/${project.build.finalName}-tomcat</directory>
                  <filemode>755</filemode>
                  <username>topaz</username>
                  <groupname>topaz</groupname>
                  <sources>
                    <source>
                      <!-- The following is tied to <id> and <format> in assembly.xml -->
                      <location>${project.build.directory}/${project.build.finalName}-tomcat.dir</location>
                    </source>
                  </sources>
                </mapping>
                <mapping>
                  <directory>/usr/local/ambra/bin</directory>
                  <filemode>755</filemode>
                  <username>topaz</username>
                  <groupname>topaz</groupname>
                  <sources>
                    <source>
                      <location>${project.build.directory}/${project.build.finalName}-tomcat.dir/scripts</location>
                    </source>
                  </sources>
                </mapping>
                <mapping>
                  <directory>/usr/local/ambra/templates</directory>
                  <filemode>755</filemode>
                  <username>topaz</username>
                  <groupname>topaz</groupname>
                  <sources>
                    <source>
                      <location>${project.build.directory}/${project.build.finalName}-tomcat.dir/templates</location>
                    </source>
                  </sources>
                </mapping>
                <mapping>
                  <directory>/usr/share/doc/ambra</directory>
                  <documentation>true</documentation>
                  <filemode>755</filemode>
                  <username>topaz</username>
                  <groupname>topaz</groupname>
                </mapping>
                <mapping>
                  <directory>/var/lib/topaz</directory>
                  <filemode>755</filemode>
                  <username>topaz</username>
                  <groupname>topaz</groupname>
                </mapping>
                <mapping>
                  <directory>/var/lib/topaz/data</directory>
                  <filemode>755</filemode>
                  <username>topaz</username>
                  <groupname>topaz</groupname>
                </mapping>
                <mapping>
                  <directory>/etc/topaz</directory>
                  <configuration>true</configuration>
                  <filemode>644</filemode>
                  <username>topaz</username>
                  <groupname>topaz</groupname>
                  <sources>
                    <source>
                      <location>src/main/resources/ambra.xml</location>
                    </source>
                    <source>
                      <location>src/main/resources/doiResolver.xml</location>
                    </source>
                  </sources>
                </mapping>
                <mapping>
                  <directory>/etc/topaz</directory>
                  <configuration>true</configuration>
                  <filemode>755</filemode>
                  <username>topaz</username>
                  <groupname>topaz</groupname>
                </mapping>
                <mapping>
                  <directory>/var/log/topaz</directory>
                  <filemode>755</filemode>
                  <username>topaz</username>
                  <groupname>topaz</groupname>
                </mapping>
                <mapping>
                  <directory>/etc/sysconfig</directory>
                  <configuration>true</configuration>
                  <filemode>755</filemode>
                  <username>root</username>
                  <groupname>root</groupname>
                  <sources>
                    <source>
                      <location>src/main/resources/ambra</location>
                    </source>
                  </sources>
                </mapping>
                <mapping>
                  <directory>/etc/rc.d/init.d/</directory>
                  <filemode>755</filemode>
                  <username>root</username>
                  <groupname>root</groupname>
                  <sources>
                    <source>
                      <location>src/main/scripts/ambra</location>
                    </source>
                  </sources>
                </mapping>
              </mappings>

              <preinstallScript>src/main/scripts/preinstall</preinstallScript>
              <postinstallScript>src/main/scripts/postinstall</postinstallScript>
              <preremoveScript>src/main/scripts/preremove</preremoveScript>
              <postremoveScript>src/main/scripts/postremove</postremoveScript>
              <verifyScript>src/main/scripts/verify</verifyScript>
            </configuration>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>
</project>
