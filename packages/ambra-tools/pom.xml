<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

  <modelVersion>4.0.0</modelVersion>
  <groupId>org.ambraproject.packages</groupId>
  <artifactId>ambra-tools</artifactId>
  <version>0.9.5</version>
  <packaging>pom</packaging>
  <name>ambra-tools</name>

  <parent>
    <groupId>org.ambraproject.packages</groupId>
    <artifactId>packages</artifactId>
    <version>0.9.5</version>
  </parent>

  <dependencies>
    <dependency>
      <groupId>org.ambraproject</groupId>
      <artifactId>ambra-scripts</artifactId>
      <version>${project.version}</version>
     <type>jar</type>
     <classifier>scripts</classifier>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <plugin>
        <artifactId>maven-assembly-plugin</artifactId>
        <configuration>
          <descriptors>
            <descriptor>src/main/assembly/assembly.xml</descriptor>
          </descriptors>
        </configuration>
      </plugin>
    </plugins>
  </build>

  <profiles>
    <profile>
      <id>rpm</id>
      <build>
        <plugins>
          
          <plugin>
            <groupId>org.codehaus.mojo</groupId>
            <artifactId>build-helper-maven-plugin</artifactId>
            <executions><execution><id>attach-rpm</id></execution></executions>
          </plugin>

          <plugin>
            <groupId>org.codehaus.mojo</groupId>
            <artifactId>rpm-maven-plugin</artifactId>

            <executions>
              <execution>
                <phase>package</phase>
                <goals>
                  <goal>rpm</goal>
                </goals>
              </execution>
            </executions>

            <configuration>
              <mappings>
                <mapping>
                  <directory>/usr/local/topaz</directory>
                  <filemode>755</filemode>
                  <username>topaz</username>
                  <groupname>topaz</groupname>
                </mapping>
                <mapping>
                  <directory>/var/log/topaz</directory>
                  <filemode>755</filemode>
                  <username>topaz</username>
                  <groupname>topaz</groupname>
                </mapping>
                <mapping>
                  <directory>/usr/local/topaz/bin</directory>
                  <filemode>755</filemode>
                  <username>topaz</username>
                  <groupname>topaz</groupname>
                  <sources>
                    <source>
                      <location>${project.build.directory}/${project.build.finalName}-ambra-tools.dir/bin</location>
                    </source>
                  </sources>
                </mapping>
                <mapping>
                  <directory>/usr/local/topaz/lib</directory>
                  <filemode>755</filemode>
                  <username>topaz</username>
                  <groupname>topaz</groupname>
                  <sources>
                    <source>
                      <location>${project.build.directory}/${project.build.finalName}-ambra-tools.dir/lib</location>
                      <excludes>
                        <exclude>ambra-script*.jar</exclude>
                      </excludes>
                    </source>
                  </sources>
                </mapping>
                <mapping>
                  <directory>/usr/local/topaz/scripts</directory>
                  <filemode>755</filemode>
                  <username>topaz</username>
                  <groupname>topaz</groupname>
                  <sources>
                    <source>
                      <location>${project.build.directory}/${project.build.finalName}-ambra-tools.dir/scripts</location>
                    </source>
                  </sources>
                </mapping>
                <mapping>
                  <directory>/usr/local/topaz/classes</directory>
                  <filemode>755</filemode>
                  <username>topaz</username>
                  <groupname>topaz</groupname>
                  <sources>
                    <source>
                      <location>src/main/resources/log4j.xml</location>
                    </source>
                  </sources>
                </mapping>
              </mappings>

              <preinstallScript>src/main/scripts/preinstall</preinstallScript>
              <postinstallScript>src/main/scripts/postinstall</postinstallScript>
              <requires>
                <require>/bin/bash</require>
              </requires>
            </configuration>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>
</project>
