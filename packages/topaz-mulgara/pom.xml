<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

  <modelVersion>4.0.0</modelVersion>
  <groupId>org.ambraproject.packages</groupId>
  <artifactId>topaz-mulgara</artifactId>
  <version>0.9.5.0.1</version>
  <packaging>pom</packaging>
  <name>topaz-mulgara</name>

  <parent>
    <groupId>org.ambraproject.packages</groupId>
    <artifactId>packages</artifactId>
    <version>0.9.5.0.1</version>
  </parent>

  <dependencies>
    <dependency>
      <groupId>org.topazproject</groupId>
      <artifactId>mulgara-service</artifactId>
      <type>jar</type>
    </dependency>
  </dependencies>

  <profiles>
    <profile>
      <id>rpm</id>
      <build>
        <plugins>
          <plugin>
            <groupId>org.codehaus.mojo</groupId>
            <artifactId>build-helper-maven-plugin</artifactId>
            <executions><execution><id>attach-rpm</id></execution></executions>
          </plugin>

          <plugin>
            <groupId>org.codehaus.mojo</groupId>
            <artifactId>rpm-maven-plugin</artifactId>

            <executions>
              <execution>
                <phase>package</phase>
                <goals>
                  <goal>rpm</goal>
                </goals>
              </execution>
            </executions>

            <configuration>
              <mappings>
                <mapping>
                  <directory>/usr/local/topaz</directory>
                  <filemode>755</filemode>
                  <username>topaz</username>
                  <groupname>topaz</groupname>
                </mapping>
                <mapping>
                  <directory>/usr/local/topaz/${project.build.finalName}</directory>
                  <filemode>755</filemode>
                  <username>topaz</username>
                  <groupname>topaz</groupname>
                  <dependency />
                  <sources>
                    <source>
                      <location>src/main/resources/log4j.xml</location>
                    </source>
                  </sources>
                </mapping>
                <mapping>
                  <directory>/var/lib/topaz</directory>
                  <filemode>755</filemode>
                  <username>topaz</username>
                  <groupname>topaz</groupname>
                </mapping>
                <mapping>
                  <directory>/var/lib/topaz/data</directory>
                  <filemode>755</filemode>
                  <username>topaz</username>
                  <groupname>topaz</groupname>
                </mapping>
                <mapping>
                  <directory>/var/log/topaz</directory>
                  <filemode>755</filemode>
                  <username>topaz</username>
                  <groupname>topaz</groupname>
                </mapping>
                <mapping>
                  <directory>/usr/share/doc/topaz</directory>
                  <documentation>true</documentation>
                  <filemode>755</filemode>
                  <username>topaz</username>
                  <groupname>topaz</groupname>
                </mapping>
                <mapping>
                  <directory>/etc/topaz</directory>
                  <configuration>true</configuration>
                  <filemode>644</filemode>
                  <username>topaz</username>
                  <groupname>topaz</groupname>
                  <sources>
                    <source>
                      <location>src/main/resources/mulgara.xml</location>
                    </source>
                  </sources>
                </mapping>
                <mapping>
                  <directory>/etc/topaz</directory>
                  <configuration>true</configuration>
                  <filemode>755</filemode>
                  <username>topaz</username>
                  <groupname>topaz</groupname>
                </mapping>
                <mapping>
                  <directory>/etc/rc.d/init.d/</directory>
                  <filemode>755</filemode>
                  <username>root</username>
                  <groupname>root</groupname>
                  <sources>
                    <source>
                      <location>src/main/scripts/topaz-mulgara</location>
                    </source>
                  </sources>
                </mapping>
                <mapping>
                  <directory>/etc/sysconfig/</directory>
                  <configuration>true</configuration>
                  <filemode>755</filemode>
                  <username>root</username>
                  <groupname>root</groupname>
                  <sources>
                    <source>
                      <location>src/main/resources/topaz-mulgara</location>
                    </source>
                  </sources>
                </mapping>
              </mappings>

              <preinstallScript>src/main/scripts/preinstall</preinstallScript>
              <postinstallScript>src/main/scripts/postinstall</postinstallScript>
              <preremoveScript>src/main/scripts/preremove</preremoveScript>
              <postremoveScript>src/main/scripts/postremove</postremoveScript>
              <verifyScript>src/main/scripts/verify</verifyScript>
            </configuration>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>
</project>
